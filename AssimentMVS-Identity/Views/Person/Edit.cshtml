@model PersonVM

@{
    ViewData["Title"] = "Edit Person";
}

<h1>Edit</h1>

<h4>Person</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-controller="Person" asp-action="Edit" asp-route-ID="@Model.Id">

            <partial name="_EditPerson" model="Model" />

            <div class="form-group">
                <div>Choose an City:</div>
                <select asp-for="CityId">
                    <option value="0">No City</option>
                    @foreach (var item in Model.Cities)
                    {
                        <option value="@item.Id">@item.Name</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a class="btn btn-danger" asp-controller="Person" asp-action="Index">Back to List</a>
            </div>
            <input asp-for="Id" type="hidden" />
            <input asp-for="CityId" type="hidden" />
            <input asp-for="Cities" type="hidden" />
        </form>
    </div>
</div>

