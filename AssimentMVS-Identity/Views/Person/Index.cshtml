@model List<Person>
@{
    ViewData["Title"] = "Person Index";
}

<h1>Person List</h1>

<form class="row">
    <span class="col-12">
            <p class="col">Name:<input type="text" id="createName" name="name"></p>
            <p class="col">Age:<input type="text" id="createAge" name="age"></p>
            <p class="col">
                <button class="btn btn-success" onclick="LinkCreate('@Url.Action("CreatePerson", "Person")')">
                    Create Person
                </button>
            </p>        
    </span>
</form>
<hr />
<div class="row MarginZero">
    <div class="col"><b>Name</b></div>
    <div class="col"><b>Age</b></div>
    <hr />
    <div id="AllPersons">
        @foreach (var item in Model)
        {
            @await Html.PartialAsync("_Person", item)
        }

    </div>
</div>

