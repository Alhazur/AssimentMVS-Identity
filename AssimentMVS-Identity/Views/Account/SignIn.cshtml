@model LoginViewModel
@{
    ViewData["Title"] = "SignIn";
}

<h1>SignIn</h1>

@if (ViewBag.msg != null)
{
    <p style="color:red">Status: @ViewBag.msg</p>
}
    <div class="row">
        <form asp-controller="Account" asp-action="SignIn" method="post">
            <div class="form-group">
                <div class="row">
                    <div class="col-sm-2">
                        <label asp-for="UserName"></label>
                    </div>
                    <div class="col-sm-4">
                        <input asp-for="UserName" />
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-sm-2">
                        <label asp-for="Password"></label>
                    </div>
                    <div class="col-sm-4">
                        <input asp-for="Password" />
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-sm-2">
                    </div>
                    <div class="col-sm-4">
                        <button type="submit" class="btn btn-primary">Login</button>
                    </div>
                </div>
            </div>
        </form>
    </div>