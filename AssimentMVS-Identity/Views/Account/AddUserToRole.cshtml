@model List<AppUser>
@inject UserManager<AppUser> UserManager
@{
    ViewData["Title"] = "AddUserToRole";
}

<h1>AddUserToRole</h1>

<table>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.UserName-</td>
            <td>
                @foreach (var role in await UserManager.GetRolesAsync(item))
                {
                    <text> Is: @role</text>
                }
            </td>
            <td>@Html.ActionLink("Give role", "AddUserToRoleSave", "Account", new { role = ViewBag.Role, userId = item.Id })</td>
        </tr>
    }
</table>

<a asp-controller="Account" asp-action="RoleList">Back to Roles list</a>