@model Country

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>
<h2>Country info</h2>
<hr />

<div>
    <dl class="row">
        <dt class="col-sm-2">
            Country name
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
    </dl>

    <hr />                                                              @* CreateCity(int countryId) get method *@
    <a class="btn btn-primary" asp-controller="Country" asp-action="CreateCity" asp-route-countryId="@Model.Id">Create City</a>

    <table class="table table-striped table-dark">
        <thead>
            <tr>
                <th scope="col">City</th>
                <th scope="col">Options</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Cities)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Name)</td>
                    <td>
                        <a class="btn btn-primary" asp-controller="Country" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                        <a class="btn btn-info"    asp-controller="City" asp-action="Details" asp-route-id="@item.Id">Details</a>
                        <a class="btn btn-danger"  asp-controller="Country" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <hr />
</div>